{
  "coverageDirectory": "../coverage",
  "moduleFileExtensions": ["js", "jsx", "ts", "tsx", "json"],
  "preset": "ts-jest",
  "rootDir": "src",
  "testMatch": ["**/*.spec.ts"],
  "verbose": true,
  "transform": {
    "^.+\\.[tj]sx?$": ["ts-jest", { "useESM": true }]
  },
  "transformIgnorePatterns": ["node_modules/(?!(uuid)/)"]
}
